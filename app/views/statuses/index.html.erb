<style type="text/css">

  table {
    background: #f8f8f8;
  }
  th {
    font-weight: bold;
    background-color: #e4e4e4;
  }
  td {
    padding: 5px 20px 5px;
    text-align: left;
  }

</style>

<h1>Listing statuses</h1>
<h3>Social Network 3.0!</h3>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statuses.each do |status| %>
  <tr>
    <td><%= status.name %></td>
    <td><%= status.content %></td>
    <td><%= link_to 'Show', status %></td>
    <td><%= link_to 'Edit', edit_status_path(status) %></td>
    <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

